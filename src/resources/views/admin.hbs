<div class="mt-5">

    <div class="mt-6">
        <a type="button" class="btn btn-primary" href="/acdm/quan-li">Quản Lý Chương trình</a>
      
        <a type="button" class="btn btn-primary" href="">Đăng chương trình</a>
    </div>

    <h3 class="mt-3">ĐĂNG CHƯƠNG TRÌNH</h3>
    <form method="POSt" action="/acdm/store" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Tên chương trình</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="link" class="form-label">Liên kết</label>
            <input type="text" class="form-control" name="link">
        </div>
        
        <div class="mb-3">
            <label for="img" class="form-label">Hình ảnh liên quan</label>
            <input type="file" class="form-control" name="img">
        </div>
        <button type="submit" class="btn btn-primary">Đăng</button>
</form>
</div>

