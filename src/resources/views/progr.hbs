<div class="mt-4">
    <div class="row">

        {{#each infors}}
        <div class="col-sm-6 col-lg-4" style="margin-top: 20px;">
            <div class="card">
                <a href="/progr/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" title="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/progr/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="{{this.link}}" class="btn btn-primary">Chuyển hướng</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>